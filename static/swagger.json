{
  "swagger" : "2.0",
  "info" : {
    "description" : "This is a simple API for controlling your Vector",
    "version" : "0.1.0",
    "title" : "Vector Dashboard API",
    "contact" : {
      "email" : "Alex.D.Thiel@gmail.com"
    },
    "license" : {
      "name" : "MIT License",
      "url" : "https://opensource.org/licenses/MIT"
    }
  },
  "paths" : {
    "/api/behavior/drive_off_charger" : {
      "post" : {
        "summary" : "Move the robot off of the charging station",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Returns this code if the robot was reached"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/drive_on_charger" : {
      "post" : {
        "summary" : "Tell the robot to find and get onto the charging station",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Returns this code if the robot was reached"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/dock_with_cube" : {
      "post" : {
        "summary" : "Tell the robot to dock with its cube",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Returns this code if the robot was reached"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/drive_straight" : {
      "post" : {
        "summary" : "Tell the vector to move straight.",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "description" : "The parameters for the move action.",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/DriveStraightParameters"
          }
        } ],
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Returns this code if the robot was reached"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/turn_in_place" : {
      "post" : {
        "summary" : "Tell vector to turn around in its current position.",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "description" : "The parameters for the move action.",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/DriveTurnParameters"
          }
        } ],
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Returns this code if the robot was reached"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    }
  },
  "definitions" : {
    "DriveStraightParameters" : {
      "type" : "object",
      "properties" : {
        "distance" : {
          "type" : "integer",
          "description" : "Distance, in milimeters. If positive, movement will be forward. If negative, distance will be backwards.",
          "example" : 100
        },
        "speed" : {
          "type" : "integer",
          "description" : "Speed in milimeters/second",
          "example" : 60,
          "minimum" : 0,
          "maximum" : 100
        }
      }
    },
    "DriveTurnParameters" : {
      "type" : "object",
      "properties" : {
        "angle" : {
          "type" : "number",
          "example" : 3.14159,
          "description" : "The angle to turn, in radians. Positive values turn left, negative values turn right. "
        },
        "speed" : {
          "type" : "number",
          "description" : "Angular turn speed in rad/sec",
          "default" : 1.570795,
          "example" : 1.570795
        },
        "accel" : {
          "type" : "number",
          "description" : "Acceleration in radians/sec^2",
          "default" : 0
        }
      }
    }
  },
  "schemes" : [ "http" ]
}