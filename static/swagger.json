{
  "swagger" : "2.0",
  "info" : {
    "description" : "This is a simple API for controlling your Vector",
    "version" : "0.1.0",
    "title" : "Vector Dashboard API",
    "contact" : {
      "email" : "Alex.D.Thiel@gmail.com"
    },
    "license" : {
      "name" : "MIT License",
      "url" : "https://opensource.org/licenses/MIT"
    }
  },
  "paths" : {
    "/api/behavior/drive_off_charger" : {
      "post" : {
        "summary" : "Move the robot off of the charging station",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Boolean true or false if successfully performed"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/drive_on_charger" : {
      "post" : {
        "summary" : "Tell the robot to find and get onto the charging station",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Boolean true or false if successfully performed"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/dock_with_cube" : {
      "post" : {
        "summary" : "Tell the robot to dock with its cube",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Boolean true or false if successfully performed"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    },
    "/api/behavior/drive_straight" : {
      "post" : {
        "summary" : "Tell the vector to move straight.",
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "description" : "The parameters for the move action",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/DriveStraightParameters"
          }
        } ],
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Boolean true or false if successfully performed"
          },
          "503" : {
            "description" : "Unable to connect to robot"
          }
        }
      }
    }
  },
  "definitions" : {
    "DriveStraightParameters" : {
      "type" : "object",
      "properties" : {
        "distance" : {
          "type" : "integer",
          "description" : "Distance, in milimeters",
          "example" : 100
        },
        "speed" : {
          "type" : "integer",
          "description" : "Speed in milimeters/second",
          "example" : 60
        }
      }
    }
  },
  "schemes" : [ "http" ]
}